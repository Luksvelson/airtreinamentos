# 1. Configurações de segurança e arquivo padrão
Options -Indexes
DirectoryIndex index.html
ErrorDocument 404 /index.html

RewriteEngine On
RewriteBase /

# 2. FORÇAR HTTPS (SEGURANÇA)
# Se não estiver usando HTTPS, redireciona agora
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 3. ROTA PARA O SITE: AIR TREINAMENTOS
# Se o domínio for airtreinamentos.com.br
RewriteCond %{HTTP_HOST} ^(www\.)?airtreinamentos\.com\.br$ [NC]
# E se o pedido NÃO for para um arquivo real (imagem, css, etc)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# Envie tudo para a pasta do site React
RewriteCond %{REQUEST_URI} !^/airtreinamentos/
RewriteRule ^(.*)$ /airtreinamentos/$1 [L]